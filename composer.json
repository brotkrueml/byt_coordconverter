{
    "name": "brotkrueml/coordconverter",
    "type": "typo3-cms-extension",
    "description": "TYPO3 view helper for converting geospatial coordinates from one format into another",
    "license": "GPL-2.0-or-later",
    "keywords": [
        "TYPO3",
        "extension",
        "coordinate converter",
        "coordinates",
        "utm",
        "wgs84"
    ],
    "authors": [
        {
            "name": "Chris MÃ¼ller",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/brotkrueml/byt_coordconverter/issues"
    },
    "require": {
        "php": "^7.4",
        "typo3/cms-core": "^9.5 || ^10.4",
        "typo3fluid/fluid": "^2.6"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "php-coveralls/php-coveralls": "^2.2",
        "phpunit/phpunit": "^9.1"
    },
    "autoload": {
        "psr-4": {
            "Brotkrueml\\BytCoordconverter\\": "Classes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Brotkrueml\\BytCoordconverter\\Tests\\": "Tests"
        }
    },
    "replace": {
        "typo3-ter/byt_coordconverter": "self.version"
    },
    "config": {
        "sort-packages": true,
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin"
    },
    "extra": {
        "typo3/cms": {
            "app-dir": ".Build",
            "web-dir": ".Build/web",
            "extension-key": "byt_coordconverter"
        }
    },
    "scripts": {
        "fix-cs": ".Build/bin/php-cs-fixer fix",
        "extension-init": [
            "rm -rf ../extension-release/*"
        ],
        "extension-copy": [
            "mkdir -p ../extension-release",
            "cp -ra * ../extension-release/"
        ],
        "extension-cleanup": [
            "rm -f ../extension-release/composer.lock",
            "rm -f ../extension-release/README.md",
            "rm -rf ../extension-release/Documentation*",
            "rm -rf ../extension-release/Tests"
        ],
        "extension-zip": [
            "cd ../extension-release/; grep -Po \"(?<='version' => ')([0-9]+\\.[0-9]+\\.[0-9]+)\" ext_emconf.php | xargs -I {version} sh -c 'rm -fv ../byt_coordconverter_{version}.zip; zip -r ../byt_coordconverter_{version}.zip *'"
        ],
        "extension-release": [
            "@extension-init",
            "@extension-copy",
            "@extension-cleanup",
            "@extension-zip"
        ]
    }
}
